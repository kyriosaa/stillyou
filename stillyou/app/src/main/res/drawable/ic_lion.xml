        android:fillColor="#000000"
        android:pathData="M 80 90 m -5 0 a 5 5 0 1 0 10 0 a 5 5 0 1 0 -10 0" />
    <!-- Right Eye (converted from circle cx="120", cy="90", r="5") -->
    <path
        android:fillColor="#000000"
        android:pathData="M 120 90 m -5 0 a 5 5 0 1 0 10 0 a 5 5 0 1 0 -10 0" />

    <!-- Nose -->
    <path
        android:fillColor="#A0522D"
        android:pathData="M95,110 L105,110 L100,120 Z" />

    <!-- Mouth -->
    <path
        android:strokeColor="#000000"
        android:strokeWidth="2"
        android:fillColor="@android:color/transparent"
        android:pathData="M100,120 Q90,130 80,125" />
    <path
        android:strokeColor="#000000"
        android:strokeWidth="2"
        android:fillColor="@android:color/transparent"
        android:pathData="M100,120 Q110,130 120,125" />
